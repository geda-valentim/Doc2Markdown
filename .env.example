# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Conversion Settings
MAX_FILE_SIZE_MB=50
CONVERSION_TIMEOUT_SECONDS=300
TEMP_STORAGE_PATH=/tmp/doc2md

# Docling Performance Settings (optimize for speed)
DOCLING_ENABLE_OCR=False         # Set to True only for scanned PDFs (slower)
DOCLING_ENABLE_TABLE_STRUCTURE=True  # Set to False if no tables needed (faster)
DOCLING_USE_V2_BACKEND=True      # Use beta backend (10x faster)

# Storage Settings
RESULT_TTL_SECONDS=3600
CLEANUP_INTERVAL_HOURS=24

# Google Drive (optional)
GOOGLE_DRIVE_CREDENTIALS_PATH=/secrets/gdrive.json

# Dropbox (optional)
DROPBOX_APP_KEY=
DROPBOX_APP_SECRET=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
